<Page loaded="loaded">
  <Page.actionBar>
    <ActionBar class="action-bar">
      <ActionBar.titleView>
        <NavigationButton text="Back" android.systemIcon="ic_menu_back" tap="back"/>
        <StackLayout orientation="horizontal"
    ios:horizontalAlignment="center"
    android:horizontalAlignment="left">
          <Image src="~/images/logoBar.png" class="action-image"></Image>
          <Label text="Fashion" style="font-size:22;" class="action-label-1" />
        </StackLayout>
      </ActionBar.titleView>
      <ActionItem tap="onSaveUser" style="font-size:22;" ios.systemIcon="2" text="enviar"/>
    </ActionBar>








    <GridLayout rows="*" columns="*">
    <Image row="0" col="0" src="{{imgen}}"></Image>
    <FlexboxLayout  flexDirection="column" style="background-repeat: no-repeat; background-position: center; width:100%; height:100%;" >
        <!-- Reverse the natural flow of items -->
        


        <FlexboxLayout height="160" flexDirection="row-reverse">
            <Label text="" flexGrow="1"/>
            <StackLayout class="btn-img"  orientation="horizontal" flexGrow="2" tap="yesTop">
                <Image src="{{botonSiA}}"  width="35%" height="100%"></Image>
            </StackLayout>
            <StackLayout class="btn-img"  orientation="horizontal" flexGrow="2" tap="noTop">
                <Image src="{{botonNoA}}"  width="35%" height="100%"></Image>
            </StackLayout>
            <Label text="" flexGrow="1"/>
        </FlexboxLayout>







  
            <FlexboxLayout height="380" flexDirection="row-reverse">
            <Label text="" flexGrow="1" />
            <StackLayout class="btn-img"  orientation="horizontal" flexGrow="2" tap="yesM">
                <Image src="{{botonSiM}}"  width="35%" height="100%"></Image>
            </StackLayout>
            <StackLayout class="btn-img"  orientation="horizontal" flexGrow="2" tap="noM">
                <Image src="{{botonNoM}}"  width="35%" height="100%"></Image>
            </StackLayout>
            <Label text="" flexGrow="1" />
        </FlexboxLayout>
        







        <FlexboxLayout height="160" flexDirection="row-reverse">
            <!-- Use even flexGrow to achieve uniform grid -->
            <Label text="" flexGrow="1" />
            <StackLayout class="btn-img"  orientation="horizontal" flexGrow="2" tap="yesB">
                <Image src="{{botonSiB}}"  width="35%" height="100%"></Image>
            </StackLayout>
            <StackLayout class="btn-img"  orientation="horizontal" flexGrow="2" tap="noB">
                <Image src="{{botonNoB}}"  width="35%" height="100%"></Image>
            </StackLayout>
            <Label text="" flexGrow="1" />
        </FlexboxLayout>

    </FlexboxLayout>
</GridLayout>




















  </Page.actionBar>
</Page>