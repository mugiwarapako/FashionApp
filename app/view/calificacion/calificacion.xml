<Page loaded="loaded">
  <Page.actionBar>
    <ActionBar class="action-bar">
      <ActionBar.titleView>
        <NavigationButton text="Back" android.systemIcon="ic_menu_back" tap="back"/>
        <StackLayout orientation="horizontal"
    ios:horizontalAlignment="center"
    android:horizontalAlignment="left">
          <Image src="~/images/logoBar.png" class="action-image"></Image>
          <Label text="Fashion" style="font-size:22;" class="action-label-1" />
        </StackLayout>
      </ActionBar.titleView>
      <ActionItem tap="onSaveUser" style="font-size:22;" ios.systemIcon="2" text="enviar"/>
    </ActionBar>








    <FlexboxLayout  flexDirection="column" style="background-image: url('~/images/modelo.jpg');background-repeat: no-repeat; background-position: center; width:100%; height:100% "  >
        <!-- Reverse the natural flow of items -->
        


        <FlexboxLayout height="100" flexDirection="row-reverse">
            <!-- Use even flexGrow to achieve uniform grid -->
            <Label text="" flexGrow="1" />
            <Label text="" flexGrow="1" />
            <StackLayout  color="#fff" tap="yesTop"  flexGrow="1" >
                <Image src="{{botonSiA}}"></Image>
              </StackLayout>
              <StackLayout  color="#fff" tap="noTop"  flexGrow="1" >
                <Image src="{{botonNoA}}"></Image>
              </StackLayout>
            <Label text="" flexGrow="1" />
            <Label text="" flexGrow="1" />
        </FlexboxLayout>







        <!-- Set flexGrow to accomodate into any extra space -->
        <ScrollView flexGrow="1" id="scrollview" class="fullscreen">

            <!-- Wrap excessive items on new lines -->
            <FlexboxLayout height="100" flexDirection="row-reverse">
            <!-- Use even flexGrow to achieve uniform grid -->
            <Label text="" flexGrow="1" />
            
            <Label text="" flexGrow="1" />
            <StackLayout  color="#fff" tap="yesM"  flexGrow="1" >
                <Image src="{{botonSiM}}"></Image>
              </StackLayout>
              <StackLayout  color="#fff" tap="noM"  flexGrow="1" >
                <Image src="{{botonNoM}}"></Image>
              </StackLayout>
            <Label text="" flexGrow="1" />
            <Label text="" flexGrow="1" />
        </FlexboxLayout>

        </ScrollView>
        <FlexboxLayout height="100" flexDirection="row-reverse">
            <!-- Use even flexGrow to achieve uniform grid -->
            <Label text="" flexGrow="1" />
            <Label text="" flexGrow="1" />
            <StackLayout  color="#fff" tap="yesB"  flexGrow="1" >
                <Image src="{{botonSiB}}"></Image>
              </StackLayout>
              <StackLayout  color="#fff" tap="noB"  flexGrow="1" >
                <Image src="{{botonNoB}}"></Image>
              </StackLayout>
            <Label text="" flexGrow="1" />
            
            <Label text="" flexGrow="1" />
        </FlexboxLayout>
    </FlexboxLayout>



















  </Page.actionBar>
</Page>