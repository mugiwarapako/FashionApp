<Page loaded="loaded">
  <Page.actionBar>
    <ActionBar class="action-bar">
      <ActionBar.titleView>
        <NavigationButton text="Back" android.systemIcon="ic_menu_back" tap="back"/>
        <StackLayout orientation="horizontal"
    ios:horizontalAlignment="center"
    android:horizontalAlignment="left">
          <Image src="~/images/logoBar.png" class="action-image"></Image>
          <Label text="Fashion" style="font-size:22;" class="action-label-1" />
        </StackLayout>
      </ActionBar.titleView>
      <ActionItem tap="onSaveUser"  ios.systemIcon="2" android.systemIcon="ic_menu_save"/>
    </ActionBar>
  </Page.actionBar>

  <StackLayout orientation="vertical" class="margin-page">
    <Label text="Tomar Foto" class="label-text-static"/>
    <Button class="btn btn-primary" text="Tomar Foto" tap="onRequestPermissionsTap"/>
    <Label text="Descripción" class="label-text-static"/>
    <TextField text="{{ description }}" class="field-text-static" hint="Descripción" returnKeyType="next" />
  </StackLayout>

</Page>