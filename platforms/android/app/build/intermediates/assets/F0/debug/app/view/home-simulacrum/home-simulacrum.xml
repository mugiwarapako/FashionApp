<Page loaded="loaded">
  <Page.actionBar>
    <ActionBar class="action-bar">
      <ActionBar.titleView>
        <NavigationButton text="Back" android.systemIcon="ic_menu_back" tap="back"/>
        <StackLayout orientation="horizontal"
    ios:horizontalAlignment="center"
    android:horizontalAlignment="left">
          <Image src="~/images/logoBar.png" class="action-image"></Image>
          <Label text="Fashion" style="font-size:22;" class="action-label-1" />
        </StackLayout>
      </ActionBar.titleView>
      <ActionItem tap="onSaveUser"  ios.systemIcon="2" android.systemIcon="ic_menu_save"/>
    </ActionBar>
  </Page.actionBar>

  <StackLayout orientation="vertical" class="margin-page">
    <Label text="Agregar Evento" horizontalAlignment="center" class="title-activity" />
    <Label text="Nombre del evento" class="label-text-static"/>
    <TextField text="{{ name }}" class="field-text-static" hint="Nombre" returnKeyType="next" />
    
    <Label text="Dirección" class="label-text-static"/>
    <TextField text="{{ address }}" class="field-text-static"  hint="Dirección" returnKeyType="next" />

    <Label text="Fecha" class="label-text-static"/>
    <TextField text="{{ date }}" class="field-text-static" hint="Fecha" returnKeyType="next" />
    
    <Label text="Numero Lugares" class="label-text-static"/>
    <TextField text="{{ phone }}" class="field-text-static" keyboardType="phone"  hint="Teléfono" returnKeyType="done"/>
  </StackLayout>

</Page>